<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emmahogan.flatorganiser">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name=".display.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.SignUpActivity"/>
        <activity android:name=".auth.LogInActivity"/>
        <activity android:name=".display.HomeActivity"/>
        <activity android:name=".auth.SettingsActivity"/>
        <activity android:name=".flat.CreateFlatActivity"/>
        <activity android:name=".flat.JoinFlatActivity"/>
        <activity android:name=".auth.MainActivity"/>
	    <activity android:name=".shopping_list.ShoppingListActivity"/>
        <activity android:name=".auth.EditAccountActivity"/>
        <activity android:name=".bins.SetupBinsActivity"/>
        <activity android:name=".bins.BinsActivity"/>
        <activity android:name=".dinner_plan.DinnerPlanActivity"/>
        <activity android:name=".todo.TodoActivity"/>


        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>


    </application>

</manifest>
